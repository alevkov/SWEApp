<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/classmate_logo"
        app:srcCompat="@drawable/person" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/classmate_name"
        android:layout_toRightOf="@+id/classmate_logo"
        android:layout_toEndOf="@+id/classmate_logo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/white_two"
        android:hint="Classmate"/>


    <ImageView
        android:id="@+id/classmate_invite"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:maxWidth="30dp"
        android:maxHeight="20dp"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:textColor="@color/white_two"
        android:src="@drawable/more"
        android:textAlignment="viewEnd"
        android:adjustViewBounds="false"
        android:layout_width="40dp"
        android:layout_height="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classmate_classes_in"
        android:layout_below="@id/classmate_logo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/white_two" />



</RelativeLayout>