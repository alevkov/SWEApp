<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.DashboardProfile"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/frameLayout4">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="448dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.78">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/tip"
                    android:id="@+id/imageView7"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="200dp" />

                <ImageView
                    app:srcCompat="@drawable/prof"
                    android:id="@+id/imageView8"
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintRight_toRightOf="@+id/imageView7"
                    app:layout_constraintHorizontal_bias="0.01"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:textColor="@color/textColor"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/username_profile"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:text="TextView"
                android:layout_width="162dp"
                android:layout_height="40dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:gravity="center|left"
                android:textColor="@color/textColor"
                android:id="@+id/name_profile"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:text="TextView"
                android:layout_width="176dp"
                android:layout_height="23dp"
                android:id="@+id/profile_year"
                android:paddingLeft="10dp"

                android:textSize="20dp"
                android:textStyle="italic"
                android:gravity="left|center"
                android:textColor="@color/textColor"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:text="TextView"
                android:layout_width="162dp"
                android:layout_height="39dp"
                android:id="@+id/profile_email"
                android:textColor="@color/textColor"
                android:paddingLeft="10dp"

                android:gravity="center|left"
                android:textSize="20dp"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:text="TextView"
                android:layout_width="293dp"
                android:layout_height="42dp"
                android:id="@+id/profile_major"
                android:paddingLeft="10dp"

                android:textSize="20dp"
                android:textColor="@color/textColor"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/courses"
                android:paddingLeft="10dp"

                android:textSize="22dp"
                android:textColor="@color/textColor"
                android:text="Courses: "
                android:textStyle="bold"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:gravity="left"
                android:paddingLeft="10dp"

                android:id="@+id/profile_courses"
                android:paddingBottom="30dp"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="2.02" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
